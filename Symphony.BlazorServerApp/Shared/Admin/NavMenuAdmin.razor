        <li class="nav-item px-3 ">
            <NavLink class="nav-link" href="/courses">
                <span class="material-icons me-2">
                    class
                </span> Courses
            </NavLink>
        </li>
        <li class="nav-item px-3 ">
            <NavLink class="nav-link" href="/studentCorner">
                <span class="material-icons me-2">
                    menu_book
                </span> Student Corner
            </NavLink>
        </li>
        <li class="nav-item px-3 fw-bold btn">
            <NavLink class="nav-link" @onclick="() => expandFAQ = !expandFAQ">
                <span class="material-icons me-2">
                    help
                </span> FAQ Management
                <span class="material-icons me-2">
