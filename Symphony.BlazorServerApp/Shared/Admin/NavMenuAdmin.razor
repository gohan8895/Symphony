                    dashboard
                </span> Dashboard
            </NavLink>
        </li>
        <li class="nav-item px-3 ">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="material-icons me-2">
                    home
                </span> Home Page
            </NavLink>
        </li>
        @* User Management *@
        <li class="nav-item px-3 fw-bold btn">
            <NavLink class="nav-link" @onclick="() => expandSubMenuUser = !expandSubMenuUser">
                <span class="material-icons me-2">
                    people
                </span> User Management
                <span class="material-icons me-2">
                    @(expandSubMenuUser ? "expand_less" : "expand_more")
                </span>
            </NavLink>
            @if (expandSubMenuUser)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link expand-menu" href="admin/userManagement/adminManager"><span
                            class="material-icons me-2">badge</span>Admin</NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link expand-menu" href="admin/userManagement/teacherManager">
                            <span class="material-icons me-2">supervisor_account</span>
                            Teacher
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link expand-menu" href="admin/userManagement/userManager">
                            <span class="material-icons me-2">group</span>
                            User
                        </NavLink>
                    </li>
                </ul>
            }
        </li>
        @* Course Management *@
        <li class="nav-item px-3 fw-bold btn">
            <NavLink class="nav-link" @onclick="() => expandSubMenuCourse = !expandSubMenuCourse">
                <span class="material-icons me-2">
                    menu_book
                </span>
                Course Management
                <span class="material-icons me-2">
                    @(expandSubMenuCourse ? "expand_less" : "expand_more")
                </span>
            </NavLink>
            @if (expandSubMenuCourse)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link expand-menu" href="admin/course"><span
