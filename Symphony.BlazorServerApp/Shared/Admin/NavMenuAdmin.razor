                <span class="material-icons me-2">
                    help
                </span> Event Management
                <span class="material-icons me-2">
                    @(expandEvent ? "expand_less" : "expand_more")
                </span>
            </NavLink>
            @if (expandEvent)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link expand-menu" href="admin/event"><span
                            class="material-icons me-2">badge</span>Manage Event</NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link expand-menu" href="/event">
                            <span class="material-icons me-2">
                                help
                            </span> Event
                        </NavLink>
                    </li>
                </ul>
            }
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    #region expand Sub menu

    private bool expandSubMenuUser = false;
    private bool expandSubMenuCourse = false;
    private bool expandSubMenuExam = false;
    private bool expandSubMenuRegistration = false;
    private bool expandAbout = false;
    private bool expandFAQ = false;
    private bool expandNew = false;
    private bool expandEvent = false;

    #endregion

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
