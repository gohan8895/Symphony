@page "/admin/newManagement/editnew/{Id:int}"
@using Symphony.BlazorServerApp.Controls.NewComponents
@using Symphony.BlazorServerApp.Controls.Utilities

@using Symphony.BlazorServerApp.Controls.FormComponents


<div class="container">
    <h2>@Id</h2>
    <AuthorizeView Roles="admin">
        <Authorized Context="User">
            <h2 class="fw-bolder text-center fs">Update a New</h2>
            <UpdateNewComponent newId="Id" />
        </Authorized>
        <NotAuthorized>
            <UnauthorizedAccess />
        </NotAuthorized>
    </AuthorizeView>
</div>


@code {
    #region Parameter
    [Parameter]
    public int Id { get; set; }
    #endregion
}