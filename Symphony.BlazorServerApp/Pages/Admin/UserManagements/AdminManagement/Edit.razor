@page "/admin/userManagement/editAdmin/{Id:guid}"

@using Symphony.BlazorServerApp.Controls.FormComponents
@using Symphony.BlazorServerApp.Controls.Utilities

<div class="container">
    <AuthorizeView Roles="admin">
        <Authorized Context="User">
            <h2 class="fw-bolder text-center fs">Update an Admin</h2>
            <UpdateUserComponent InputUser="@InputUser" Id="Id" IsAdminUpdate="true"/>
        </Authorized>
        <NotAuthorized>
            <UnauthorizedAccess />
        </NotAuthorized>
    </AuthorizeView>
</div>


@code {
    #region Parameter & VM
    private UpdateAppUserVM InputUser { get; set; } = new();

    [Parameter]
    public Guid Id { get; set; }
    #endregion
}