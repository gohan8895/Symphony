@page "/admin/userManagement/editTeacher/{Id:guid}"

@using Symphony.BlazorServerApp.Controls.FormComponents
@using Symphony.BlazorServerApp.Controls.Utilities

<div class="container">
    <AuthorizeView Roles="admin">
        <Authorized Context="User">
            <h2 class="fw-bolder text-center fs">Update a Teacher</h2>
            <UpdateUserComponent Id="Id" WhoToUpdate="teacher"/>
        </Authorized>
        <NotAuthorized>
            <UnauthorizedAccess />
        </NotAuthorized>
    </AuthorizeView>
</div>


@code {
    #region Parameter & VM
    [Parameter]
    public Guid Id { get; set; }
    #endregion
}